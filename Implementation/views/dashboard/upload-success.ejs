<%- include('../layouts/loggedheader'); -%>
<div class="row">
  <div class="col-3">
    <div class="d-flex flex-column">
      <%- include('../layouts/sidebar'); -%>
    </div>
  </div>
  <div class="col-9">
    <div class="card shadow m-3">
      <div class="card-header">
        <h3>Upload Successful</h3>
      </div>
      <div class="card-body text-center">
        <div class="mb-4">
          <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
        </div>
        <h4 class="mb-3">Your expenses have been successfully uploaded!</h4>
        <p class="lead"><%= count %> expense<%= count !== 1 ? 's' : '' %> added to your account.</p>
        
        <div class="mt-5">
          <a href="/dashboard" class="btn btn-primary me-3">Go to Dashboard</a>
          <a href="/dashboard/transactions" class="btn btn-outline-primary">View All Expenses</a>
        </div>
      </div>
    </div>
  </div>
</div>
