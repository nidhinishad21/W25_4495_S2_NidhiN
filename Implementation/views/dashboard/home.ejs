
<%- include('../layouts/loggedheader'); -%>
<div class="row">
    <div class="col-3">
        <div class="d-flex flex-column"> 
            <%- include('../layouts/sidebar'); -%>
        </div>
    </div>
    <div class="col-6">
        <div class="card shadow m-3">
            <div class="card-header">
                <h3>Expenses this month</h3>
                <div class="mb-3">
                    <label for="dateBootstrap" class="form-label">From</label>
                    <input type="date" 
                           class="form-control" 
                           id="dateBootstrap" 
                           name="dateBootstrap"
                           required>
                    <label for="dateBootstrap" class="form-label">To</label>
                    <input type="date" 
                           class="form-control" 
                           id="dateBootstrap" 
                           name="dateBootstrap"
                           required>
                    <button type="submit" class="btn btn-primary mt-3">Show Expenses</button>
                </div>
            </div>
            <% if (locals.message) { %>
                <div class="alert alert-success" role="alert">
                    <%= message %>
                </div>
              <% } %>
            <div class="card-body">
                <%- include('../layouts/piechart') %>
            </div>
        </div>
    </div>
</div>
<%- include('../layouts/floating-button') %>
<%- include('../layouts/footer'); -%>